<!DOCTYPE <html>
<head>
	<title>D3 Playground</title>
	<script src="https://d3js.org/d3.v5.js"></script>
</head>
<body>
	<h2>Data Visualizations: Groups and Axes</h2>
	<p> Link to the lesson <a href="https://www.youtube.com/watch?v=SYuFy1j8SGs&list=PL6il2r9i3BqH9PmbOf5wA5E1wOG3FT22p&index=6">here</a></p>
	<p><%= link_to "Back", root_path %></p>
	<br>

	<script type="text/javascript">

		var dataArray = [1, 5, 20, 40, 50, 60];
		var width = 500;
		var height = 500;

		var widthScale = d3.scale.linear()
						.domain([0, 60])
						.range([0, width]);

		var color = d3.scale.linear()
					.domain([0, 60])
					.range(["red", "blue"]);

		var axis = d3.axisBottom()
					.scale(widthScale)
					.ticks(20)
					.tickSize(10);

		var canvas = d3.select("body")
					.append("svg")
					.attr("width", width)
					.attr("height", height)
					.append("g")
					.attr("transform", "translate(0, 0)")
					.call(axis);

		var bars = canvas.selectAll("rect")
					.data(dataArray)
					.enter()
						.append("rect")
						.attr("width", function(d) { return widthScale(d); })
						.attr("height", 50)
						.attr("fill", function(d) { return color(d) })
						.attr("y", function(d, i) { return i * 52 });

	</script>

</body>
</html>